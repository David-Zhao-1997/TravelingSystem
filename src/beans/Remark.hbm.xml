<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="beans.Remark" catalog="TravelingSystem" schema="dbo" table="Remark">
        <id name="remarkId">
            <column name="RemarkID" sql-type="int"/>
        </id>
        <property name="email">
            <column name="Email" length="100" sql-type="varchar(100)"/>
        </property>
        <property name="noteId">
            <column name="NoteID" sql-type="int"/>
        </property>
        <property name="type">
            <column name="Type" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>